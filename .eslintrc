{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "root": true,
  "extends": "defaults/configurations/google",
  "globals": {
    "window": true,
    "document": true,
    "CustomEvent": true,
    "module": true
  },

  // add your custom rules here
  "rules": {
    "max-len": 0,
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", "never"],
    "no-multiple-empty-lines": ["error", {"max": 3}],

    // allow paren-less arrow functions
    "arrow-parens": 0
  }
}
